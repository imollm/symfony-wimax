    {% set mode = antenna.ap|length > 0 ? 'Access Point' : 'Station' %}
    
    <div class="row justify-content-center">
        <div class="col-3">
            
            {# Foto antenna #}

            <figure class="figure">
                <img src="{{path('get_antenna_image',{'file':antenna.model})}}" class="figure-img img-fluid rounded" alt="">
                <figcaption class="figure-caption text-center">
                    {{ antenna.model }}
                </figcaption>
            </figure>

        </div>
        <div class="col-9">

            <div class="row">
                <div class="col-6">
                    
                    {# Info #}

                    <h4 class="text-center">
                        Detalles t√©cnicos
                    </h4>

                    <ul class="list-unstyled">
                        <li class="text-muted">
                            <span class="font-weight-bolder">
                                Nombre: 
                            </span>
                            {{antenna.name}}
                        </li>
                        <li class="text-muted">
                            <span class="font-weight-bolder">
                                Modelo: 
                            </span>
                            {{antenna.model}}
                        </li>
                        <li class="text-muted">
                            <span class="font-weight-bolder">
                                @ Mac Wlan: 
                            </span>
                            {{antenna.wlanMac}}
                        </li>
                        <li class="text-muted">
                            <span class="font-weight-bolder">
                                @ Mac Lan: 
                            </span>
                            {{antenna.lanMac}}
                        </li>
                        <li class="text-muted">
                            <span class="font-weight-bolder">
                                Modo: 
                            </span>
                            {{ mode }}
                        </li>
                    </ul>

                </div>

                <div class="col-6">

                    {# Si es AP mostramos Stations conectadas
                    Si es Station mostramos detalle AP al cual esta conectado #}
                    {% if mode == 'Access Point' %}
                        
                        <h4 class="text-center">Estaciones conectadas {{ antenna.station|length }}</h4>
                        {# {% set values = antenna.station.getValues %}
                        {% for v in values %}
                            <pre>
                                {{ dump(v) }}
                            </pre>
                        {% endfor %} #}
                        {# {% if antenna.station|slice(0,1)|length > 0 %} #}
                            <ul class="list-unstyled">
                                {% for station in antenna.station|slice(0,1) %}
                                    {% for ant in station.antenna|slice(0,1) %}
                                        <li class="text-muted">
                                            <span class="font-weight-bolder">
                                                {{ ant.name }}
                                            </span> |
                                            {{ ant.ip }} |
                                            {{ ant.name }}
                                        </li>
                                    {% endfor %}
                                {% endfor %}
                            </ul>
                        {% endif %}

                    {# {% endif %} #}
                    
                </div>
            </div> 

        </div>

             
    </div>